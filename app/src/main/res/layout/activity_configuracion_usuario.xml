<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gitwyn_pc.usuariov1.configuracionUsuario"
    tools:layout_editor_absoluteY="81dp"
    android:layout_centerInParent="true"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="58dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tiempo Sensado (min)"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="159dp" />

                <EditText
                    android:id="@+id/editTexttiemposensado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="189dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Perimetros (metros)"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="247dp" />

                <EditText
                    android:id="@+id/editTextperimetro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="281dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewsms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="RecepciÃ³n SMS"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="247dp" />

                <CheckBox
                    android:id="@+id/checkBoxsms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ok" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonaceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="0dp"
                android:onClick="registrousuario"
                android:text="Aceptar"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="420dp" />

            <Button
                android:id="@+id/buttoncancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="0dp"
                android:text="Cancelar"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="420dp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
